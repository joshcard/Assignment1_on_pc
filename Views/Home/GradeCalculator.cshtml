@{
    //set the title and header for this page
    ViewBag.Title = "Joshua Card's Page";
    ViewBag.Header = "Calculate Your Grade";
}

@model Assignment1.Models.GradeCalculatorModel

<body>
    <!--
        grade calculator. This form receives the total percentage for each section.
        The maximum percentage possible for each section is 100%. the weight of each section is calculated automatically.
    -->
    <h3>Grade Calculator</h3>
    <p>Please input the percentage earned for each area (Do NOT include the % sign). </p>
    <p><i>note: up to 100% is possible for each section. the weights of each section will be automatically calculated.</i></p>
    <form method="post">
        <label>Assignments:</label>
        <input class="box" id="assignments" asp-for="assignments" />%
        <br />
        <label>Group Project:</label>
        <input class="box" id="groupProject" asp-for="groupProject" />%
        <br />
        <label>Quizzes:</label>
        <input class="box" id="quizzes" asp-for="quizzes" />%
        <br />
        <label>Exams:</label>
        <input class="box" id="exams" asp-for="exams" />%
        <br />
        <label>INTEX:</label>
        <input class="box" id="intex" asp-for="intex" />%
        <br />
        <input type="submit" value="Submit" id="submitButton" />
        <div asp-validation-summary="All"></div>
    </form>
</body>
